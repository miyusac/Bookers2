<div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<% if @nbook.errors.any? %>
  <%= @nbook.errors.count %>件のエラーが発生しました
  <% @nbook.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div>
  <h1>New book</h1>
  <%= form_with model: @nbook, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div>
  <p>投稿ユーザー画像：<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>title : <%= @book.title %></p>
  <p>opinion：<%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
  <% end %>
</div>

